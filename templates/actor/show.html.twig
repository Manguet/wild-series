{% extends 'base.html.twig' %}

{% block title %}Acteurs{% endblock %}

{% block body %}
    {% include "Base/navbar.html.twig" %}

    <div class="block-main">
        <h1 class="text-center">{{ actor.name }}</h1>
        <p>{{ actor.name }} apparait dans les séries suivantes:</p>

        {% for program in programs %}
            <a href="{{ path('wild_show', { 'slug': program.title }) }}">{{ program.title }}</a>
            <br/>
        {% else %}
            Aucune des séries.
        {% endfor %}
    </div>

{% endblock %}
