{% extends 'base.html.twig' %}

{% block title %}Programme{% endblock %}

{% block body %}
    {% include "Base/navbar.html.twig" %}
    <div class="block-main">
        <h1>Programme</h1>

        <a href="{{ path('program_edit', {'slug': program.slug}) }}">Editer</a>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ program.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ program.title }}</td>
                </tr>
                <tr>
                    <th>Résumé</th>
                    <td>{{ program.summary }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ program.poster }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('program_index') }}">retour à la liste</a>

        {{ include('program/_delete_form.html.twig') }}

        <strong>Acteurs :</strong>
        <ul>
            {% for actor in program.actors %}
                <li>{{ actor.name }} </li>
            {% else %}
                <li>Aucun acteur pour cette série</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
