{% extends 'base.html.twig' %}

{% block title %}Saison{% endblock %}

{% block body %}
    {% include "Base/navbar.html.twig" %}
    <div class="block-main">
        <h1>Saison</h1>

        <a href="{{ path('season_edit', {'id': season.id}) }}">Editer</a>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ season.id }}</td>
                </tr>
                <tr>
                    <th>Année</th>
                    <td>{{ season.year }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ season.description }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('season_index') }}">Retour à la liste</a>

        {{ include('season/_delete_form.html.twig') }}
    </div>
{% endblock %}
